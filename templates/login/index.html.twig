{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/login/login.css')}}">
{% endblock %}

    
    <img id="logo" src="{{asset('popcorn_logo.svg')}}" alt="logo">
    <div class="container-lg">
        <h1 class="title text-center">CONNECTEZ-VOUS !</h1>
        <div class="row">
            <div class="col">
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <form action="{{ path('login') }}" method="post" class="text-center fs-3">
                    <div class="mb-3">
                        <label for="username" class="form-label">Adresse mail</label>
                        <input class="form-control fs-3 text-center" type="text" id="username" name="_username" value="{{ last_username }}"/>
                    </div>
                    <div class="mb-4">
                        <label for="password" class="form-label">Mot de passe</label>
                        <input type="password" id="password" name="_password" class="input form-control fs-3 text-center">
                    </div>

                    <button class="connect btn btn-outline-primary fs-3" type="submit">Se connecter</button>
                </form>
                <div class="mt-3 text-center">
                    <a href="{{ path('app_forgot_password_request')}}">
                        <button class="password btn btn-outline-secondary" id="change_password" >Mot de passe oubli√©</button>
                    </a>
                </div>
                <a class="nav-link text-muted mt-3 text-center" href="{{ path("app_register")}}">Pas encore de compte ? S'inscrire !</a>
            </div>
        </div>
    </div>

<script>
    
</script>

{% endblock %}