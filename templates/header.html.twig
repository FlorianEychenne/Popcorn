{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/base/header.css')}}">
{% endblock %}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <img id="logo" src="{{asset('popcorn_logo.svg')}}" alt="logo">
        <a class="navbar-brand ms-4 popcorn" href="{{ path('news')}}">Popcorn</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse ms-3 justify-content-between" id="navbarNavAltMarkup">
            <div class="navbar-nav align-items-center">
                <li class="nav-item">
                    <a class="nav-link active" href="{{ path('news')}}">
                        <i class="fas fa-home fs-3"></i>
                    </a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="icon nav-link active seeMovies d-flex align-items-center" href="{{ path('posts')}}">
                        <i class="fas fa-th fs-4 ms-3"></i>
                        <p class="ms-2">Notre catalogue</p>
                    </a>
                    <a class="icon nav-link active addMovie d-flex align-items-center" href="{{ path('post_add')}}">
                        <i class="fas fa-ellipsis-h fs-4 ms-3"></i>
                        <p class="ms-2">Ajouter un film</p>
                    </a>
                {% else %}
                    <a class="icon nav-link active me-3 seeMovies d-flex align-items-center" href="{{ path('posts')}}">
                        <i class="fas fa-th fs-4 ms-3"></i>
                        <p class="ms-2">Notre catalogue</p>
                    </a>
                {% endif %}

            </div>
            
            <div class="rightside d-flex">
                {% if is_granted('ROLE_USER') %}
                <a class="icon nav-link active icon1" href="{{ path('user_profile', {id : app.user.id})}}">
                    <i class="fas fa-user-circle fs-3"></i>
                    <p class="ms-2">{{app.user.username}}</p>
                </a>
                {% endif %}
                <a class="icon nav-link active me-3 icon2" href="{{ path('app_logout')}}">
                    <i class="fas fa-power-off fs-3"></i>
                    <p class="ms-2">DÃ©connexion</p>
                </a>

                <form class="d-flex me-3 align-items-center" action="{{ path('search') }}">
                    <input class="search form-control" type="search" placeholder="Films, utilisateurs ..." aria-label="Search" name="search" style="width:250px">
                    <button type="submit" class="searchButton"><i class="fas fa-search ms-2 fs-3"></i></button>
                </form>
            </div>
        </div>
    </div>
</nav>