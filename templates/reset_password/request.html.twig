{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/password/reset.css')}}">
{% endblock %}


{% for flashError in app.flashes('reset_password_error') %}
<div class="alert alert-danger" role="alert">{{ flashError }}</div>
{% endfor %}

<img id="logo" src="{{asset('popcorn_logo.svg')}}" alt="logo">
<div class="container-lg">
    <h1 class="title text-center">Réinitialiser votre mot de passe</h1>
    <div class="row">
        <div class="col">
            {{ form_start(requestForm) }}
            <div class="mb-3 text-center fs-4">
                <label class="form-label">{{ form_label(requestForm.email, 'Adresse mail') }}</label>
                <div class="text-center fs-4 mt-3">
                    {{ form_widget(requestForm.email) }}
                </div>
            </div>
            <div class="text mb-3">
                <p>Entrez votre mail et nous vous enverrons un lien pour réinitialiser votre mot de passe !</p>
            </div>
        </div>
        <div class="mt-3 text-center">
            <button class="connect btn btn-outline-primary fs-4">Envoyer</button>
        </div>
        <div class="mt-3 text-center">
            <a class="nav-link text-muted text-center" href="{{ path("login")}}">Revenir à la connection</a>
        </div>
        {{ form_end(requestForm) }}
    </div>
</div>

{% endblock %}